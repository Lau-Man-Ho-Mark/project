<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200"
    tools:context=".HomeFragment">


    <TextView

        android:textColor="@color/black"
        android:background="@color/lemonchiffon"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text=" Sport Guide with Posture Instruction "
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/scrollv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTV">

        <LinearLayout
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleTV"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    app:cardBackgroundColor="@color/fadedPurple"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport1"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/withoutt_equip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Home gym"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/fadedBlue"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport2"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/with_equip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Gym with equipment"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/fadedGreen"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport3"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/chest_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Chest training"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/fadedOrange"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport4"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/leg_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Leg day"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/fadedYellow"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport5"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/yoga" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Yoga"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/fadedRed"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sport6"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/warm_up" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Warm up"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold|italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/searchSportVenue"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_marginBottom="70dp"
                    android:id="@+id/ShowMap"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/fadedOrange"
                    android:src="@android:drawable/ic_menu_search" />




            </LinearLayout>


        </LinearLayout>

    </ScrollView>




</RelativeLayout>